@model List<Computer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Spis Komputerów</h1>
<a class="btn btn-primary" asp-controller="Computer" asp-action="Create">Dodaj Komputer</a>


           @if (Model != null && Model.Count > 0){
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Nazwa)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Procesor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Memory)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Karta_Graficzna)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Producent)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Data_Produkcji)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Priority)
                        </th>
                        <th>
                            Akcje
                        </th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (Computer item in @Model)
                     {
                    <tr>
                        <td>
                            @item.Nazwa
                        </td>
                        <td>
                            @item.Procesor
                        </td>
                        <td>
                            @item.Memory GB
                        </td>
                        <td>
                            @item.Karta_Graficzna
                        </td>
                        <td>
                            @item.Producent
                        </td>

                        <td>
                            @item.Data_Produkcji.ToString("dd MMMM yyyy")
                        </td>
                        <td>
                            @item.Priority.GetDisplayName()
                        </td>

                        <td>
                            <a asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                            <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </td>
                    </tr>
                     }
                </tbody>
            </table>
}